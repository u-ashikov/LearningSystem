@model ArticleFormModel

@{
    ViewData["Title"] = "Add Article";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <form method="post" class="col-md-6 col-md-offset-3">
            <hr />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" required type="text"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" required rows="7" type="text"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <a asp-controller="Articles" asp-action="All" class="btn btn-default">Back</a>
            <input type="submit" value="Save Article" class="btn btn-success"/>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

