@model BaseArticleServiceModel

@{
    ViewData["Title"] = "Article Details";
}

<h2 class="text-center">
    <a asp-controller="Articles" asp-action="All" class="back btn btn-info">Back</a>
    @ViewData["Title"]
</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="article">
            <h3 class="text-center">@Model.Title</h3>
            <div><strong>Author: </strong>@Model.Author</div>
            <div><strong>Published: </strong>@Model.PublishDate.ToShortDateString()</div>
            <hr />
            <p>
                @Model.Content
            </p>
        </div>
    </div>
</div>

