@model SearchFormModel

@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="row">
    <form asp-action="SearchResults" class="col-md-12" method="post">
        <div class="form-group col-md-6">
            <input class="form-control" asp-for="@Model.SearchTerm" placeholder="Search...">
        </div>
        <div class="form-group col-md-2 search">
            <label for="InUsers">Users</label>
            <input type="checkbox" name="InUsers" value="true" checked />
            <input type="hidden" name="InUsers" value="false" />
        </div>
        <div class="form-group col-md-2 search">
            <label for="InCourses">Courses</label>
            <input type="checkbox" name="InCourses" value="true" checked />
            <input type="hidden" name="InCourses" value="false" />
        </div>
        <button class="btn btn-success col-md-1" type="submit">Search</button>
    </form>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/programming-slider-1.jpg" alt="programming" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build modern apps that can run anywhere with our courses.
                    <a class="btn btn-default" asp-controller="Courses" asp-action="All">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/programming-slider-2.jpg" alt="programming" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    There are lots of opportunities to develop your skills.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/programming-slider-3.jpg" alt="class room" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn by doing. Find new friends and meet people like you.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
