@model UploadCourseSolutionFormModel

@{
    ViewData["Title"] = "Upload Course Solution";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <form method="post" asp-controller="Students" asp-action="UploadSolution" class="col-md-6 col-md-offset-3" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="text" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="text" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="File"></label>
            <input asp-for="File" class="form-control" accept="application/zip" required />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <input class="btn btn-success" type="submit" value="Upload" />
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



